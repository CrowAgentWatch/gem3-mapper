# DESCRIPTION: Builds all the sources
#==================================================================================================

###############################################################################
# Definitions
###############################################################################
ROOT_PATH=../..
include $(ROOT_PATH)/Makefile.mk

###############################################################################
# Modules
###############################################################################
SUBDIRS=candidates \
        region \
        region_profile

###############################################################################
# Compilation Modes
###############################################################################
all: release

release: $(SUBDIRS)

devel: $(SUBDIRS)

profile: $(SUBDIRS)

debug: $(SUBDIRS)

###############################################################################
# Rules
###############################################################################

# Subdir rule
export GEM_FLAGS
export MODE
$(SUBDIRS):
	$(MAKE) --directory=$@ $(MODE)
	
.PHONY: $(SUBDIRS)
